<view>
  <swiper vertical='{{false}}' indicator-dots='true' autoplay='true' interval='2000'>
    <swiper-item>
      <image src='/images/2.jpg'></image>
    </swiper-item>
    <swiper-item>
      <image src='/images/3.jpg'></image>
    </swiper-item>
    <swiper-item>
      <image src='/images/4.png'></image>
    </swiper-item>
  </swiper>

  <block wx:for='{{posts_key}}'>
    <view class='post-container'>
      <view class='post-author-date'>
        <image wx:if='{{item.img_condition}}' class='post-author' src='{{item.img.author_img}}'></image>
        <text class='post-date'>{{item.date}}</text>
      </view>
      <text class='post-title'>{{'hello' + item.title}}</text>
      <image class='post-image' src='{{item.img.post_img}}'></image>
      <text class='post-content'>{{item.content}}</text>
      <view class='post-like'>
        <image class='post-like-image' src='../../images/icon/chat.png'></image>
        <text class='post-like-font'>{{item.collect_num}}</text>
        <image class='post-like-image' src='../../images/icon/view.png'></image>
        <text class='post-like-font'>{{item.view_num}}</text>
      </view>
    </view>
  </block>

</view>